@model Category
@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex flex-row">
    <div class="col-lg-2">
        <h1 class="h3 mb-3 text-gray-800">Brand Detail Page</h1>
    </div>
    <div class="col-lg-3">
        <h3 class="h3 mb-3">Brand Name:<span style="color:red">@Model.Name</span></h3>
    </div>
    <div class="col-lg-3">
        <a class="btn btn-primary" asp-action="index" asp-controller="category" asp-area="manage">Go To Home</a>
    </div>
    <div class="col-lg-3">
        <a class="btn btn-danger" asp-action="deleteCategory" asp-controller="category" asp-area="manage" asp-route-id="@Model.Id">Delete</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
        <div class="card" style="width:18rem;">
            <div class="card-body">
                @if (Model.Image != null)
                {
                    <img class="card-img-top" style="width:100px" src="~/assets/images/@Model.Image"/>
                }
                <h5 class="card-title">Name:@Model.Name</h5>
            </div>
        </div>
    </div>
</div>
@if (Model.Children != null && Model.Children.Count() > 0)
{
    <div class="row">
    <h4>Child Category</h4>
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Created At</th>
                    <th>Created By</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category child in Model.Children)
                {
                    <tr>
                        <td>@child.Name</td>
                        <td>@child.CreatedAt?.ToString("dd-MMMM-yyyy")</td>
                        <td>@child.CreatedBy</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
}
@if (Model.Products !=null && Model.Products.Count() > 0)
{
    <div class="row">
    <h4>Products</h4>
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Created At</th>
                    <th>Created By</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model.Products)
                {
                    <tr>
                        <td>@product.Title</td>
                        <td>@product.CreatedAt?.ToString("dd-MMMM-yyyy")</td>
                        <td>@product.CreatedBy</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
}

