@model IEnumerable<ProductImage>
@if (Model != null && Model.Count() > 0)
{
	@foreach (ProductImage productImage in Model)
	{
		<div class="col-lg-5">
			<img style="width:100px" src="~/assets/images/product/@productImage.Image" />
			@if (Model.Count() > 1)
			{
				<a asp-area="manage" asp-action="deleteimage" asp-controller="product" asp-route-id="@productImage.ProductId" data-imageId="@productImage.Id" style="width:min-content" class="btn btn-danger deleteImage">Delete Image </a>
			}
		</div>
	}
}